<div class="card-category">
  <%= cl_image_tag @restaurant.photo.key, :class => "image-show" %>
  <div class="restaurant-infos">
    <div>
      <h1><b><%= @restaurant.name %></b></h1>
      <h6>Cuisine:</h6>
      <p><%= @restaurant.cuisine %></p>
      <h6>Description: </h6>
      <p><%= @restaurant.description %></p>
      <h6>Location: </h6>
      <p><%= @restaurant.address %></p>
      <% if current_user.role === 'owner' %>
        <%= link_to "Edit Restaurant", edit_restaurant_path(@restaurant) %>
        <%= link_to "Delete",
          restaurant_path(@restaurant),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      <% else %>
        <%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>
      <% end %>

      <div class="review"><h3><b>Reviews</b></h3>
        <div class="review-info">
          <% @reviews.each do |review| %>
            <p class="reviewer"><b>From:</b> <%= review.user.name %><br></p>
            <p id="testing"><b>Rating: <%= review.rating %>
            <br>Comment: </b><%= review.comment %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
