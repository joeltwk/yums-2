<h1>List of Restaurants</h1>

<div data-controller="carousel" class="swiper mySwiper">
  <div class="swiper-wrapper">
    <% @restaurants.each do |restaurant| %>
      <div class="swiper-slide">
        <div class="card-body">
          <%= restaurant.name %>
          <%= link_to "Details", restaurant_path(restaurant) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
