<% if @restaurants.nil? %>
<% else %>
  <% @restaurants.each do |r| %>
    <% if r.user === current_user %>
      <div id="next-restaurant">
        <div class="card">
          <%= r.restaurant.name %>
          <%= link_to "Yes", new_restaurant_favourite_path(r.restaurant) %>
          <%= link_to "No",
            collection_path(r),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </div>
      </div>
      <% break %>
    <% end %>
  <% end %>
<% end %>

<p>
  <center><img src="https://res.cloudinary.com/heefang/image/upload/c_scale,h_500/v1661358673/yumsphone_vgistk.png" alt="Yums App"></center>
</p>
